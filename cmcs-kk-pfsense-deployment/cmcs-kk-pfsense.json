    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string"
        },
        "prefix": {
            "type": "string"
        },
        "vmname": {
            "type": "string"
        },
        "vmUsername": {
            "type": "string"
        },
        "vmPassword": {
            "type": "secureString"
        },
        "vmtags": {
            "type": "object",
            "defaultValue": {}
        },
        "disktag": {
            "type": "object",
            "defaultValue": {}
        },
        "disktype": {
            "type": "string",
            "defaultValue": "Premium_LRS"
        },
        "imageoffer": {
            "type": "string",
            "defaultvalue": "pfsense-plus-public-cloud-fw-vpn-router"
        },
        "imagesku": {
            "type": "string",
            "defaultValue": "netgate-pfsense-plus"
        },
        "vmsize": {
            "type": "string"
        },
        "vaultName": {
            "type": "string"
        },
        "backuprg": {
            "type": "string"
        }
    },
    "variables": {
        "policyName": "[concat(parameters('prefix'),'-daily-backup-VM')]",
        "vmrgname": "[concat(parameters('vmname'),'-rg')]"
